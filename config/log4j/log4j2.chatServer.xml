<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="chatServer" packages="">
    <Appenders>
        <RollingFile name="RollingFile" filePattern="logs/chatServer-%d{yyyy-MM-dd-HH}-%i.log.gz">
            <PatternLayout
                    pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"/>
            <Policies>
                <CronTriggeringPolicy schedule="0 0 * * * ?"/>
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
            <DirectWriteRolloverStrategy maxFiles="10"/>
        </RollingFile>

        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>

        <!--
            Ausgabe-Level waehlen: info, debug, trace, error
             -->
        <Root level="debug">
            <AppenderRef ref="RollingFile"/>
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>